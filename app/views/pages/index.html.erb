<table  class="table table-striped" >
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.firstname %></td>
              <td><%= user.email %></td>
              <td><%= user.role %></td>
              <td id='<%= "admin_user_#{user.id}" %>'>
                        <%= render partial: 'pages/index', locals: {admin_user: user}  %>
              </td>
            </tr>
          <% end %>
       </tbody>
     </table>
     <%= will_paginate @users %>
<% end %>
